{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@*": ["./src/*"],
      "types": ["types"],
      "tailwind-config": ["tailwind.config.ts"]
    },
    "typeRoots": ["./types"]
  },
  "include": ["./src/**/*", "./types/**/*"]
}
